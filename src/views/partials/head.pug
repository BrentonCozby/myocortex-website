mixin makeHead(title, description)
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    //- meta(http-equiv="Content-Security-Policy", content="default-src 'self'; font-src https://fonts.gstatic.com 'self'; style-src https://fonts.googleapis.com 'self'; child-src 'none'; object-src 'none'")
    title MYOCORTEX | #{title || htmlWebpackPlugin.options.title}
    meta(name='description', content= description || htmlWebpackPlugin.options.description)
    meta(property='og:url', content= htmlWebpackPlugin.options.site_url)
    meta(property='og:site_name', content= htmlWebpackPlugin.options.site_url)
    meta(property='og:type', content='website')
    meta(property='og:title', content= title || htmlWebpackPlugin.options.title)
    meta(property='og:description', content= description || htmlWebpackPlugin.options.description)
    meta(property='og:image', content='')
    meta(name='twitter:title', content= title || htmlWebpackPlugin.options.title)
    meta(name='twitter:description', content= description || htmlWebpackPlugin.options.description)
    meta(name='twitter:image', content='')
    meta(name='twitter:image:alt', content='')
    meta(name='twitter:site', content= htmlWebpackPlugin.options.site_url)
    link(rel="stylesheet", href="vendor/font-awesome-4.7.0/css/font-awesome.min.css")
